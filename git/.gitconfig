[alias]
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	nuke = reset --hard HEAD
	mst = !sh -c 'git checkout master && git pull origin master'
	mn = !sh -c 'git checkout main && git pull origin main'
	fastpush = !sh -c 'git add . && git commit -m "Fast Updates" && git push'
	new = "!sh -c 'git checkout -b \"$1\"' -"
[core]
	autocrlf = input
